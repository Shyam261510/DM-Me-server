{
  "name": "save_dm",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "worker": "bun run --hot src/worker.ts",
    "dev:all": "concurrently \"bun run dev\" \"bun run worker\"",
    "start": "bun run src/index.ts",
    "start:worker": "bun run src/worker.ts",
    "build": "bun build src/index.ts src/worker.ts --outdir dist --target bun",
    "start:all": "concurrently \"bun run start\" \"bun run start:worker\""
  },
  "dependencies": {
    "@ai-sdk/google": "^3.0.21",
    "@ai-sdk/openai": "^3.0.25",
    "@imagekit/nodejs": "^7.2.1",
    "@prisma/client": "6.19",
    "ai": "^6.0.67",
    "axios": "^1.13.3",
    "bullmq": "^5.67.2",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "hono": "^4.11.5",
    "ioredis": "^5.9.2",
    "openai": "^6.17.0",
    "prisma": "6.19",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
